<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/admin_viewCompany_cardview"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#33ccff"
    android:background="@color/colorBlue"
    app:cardCornerRadius="12dp"
    app:cardElevation="2mm">

    <TextView
        android:id="@+id/admin_viewcompany_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Full Name"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/admin_viewcompany_card_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/admin_viewcompany_card_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Phone"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/admin_viewcompany_card_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Company Name"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/admin_viewcompany_card_companyloaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Company Location"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"
        />


</androidx.cardview.widget.CardView>