<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/admin_viewstudent_cardview"
    android:layout_marginTop="10dp"
    android:background="@color/colorBlue"
    app:cardCornerRadius="10dp"
    app:cardElevation="2mm">

    <TextView
        android:id="@+id/admin_viewstudent_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Full Name"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/admin_viewstudent_card_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/admin_viewstudent_card_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Phone"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_viewstudent_card_city"
        android:layout_marginTop="140dp"
        android:text="City"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_viewstudent_card_qualification"
        android:layout_marginTop="180dp"
        android:text="Qualification"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_viewstudent_card_fields"
        android:layout_marginTop="220dp"
        android:text="Fields"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_viewstudent_card_collegename"
        android:layout_marginTop="260dp"
        android:text="College name"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_viewstudent_card_passingyear"
        android:layout_marginTop="300dp"
        android:text="Passing Year"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"
        />

</androidx.cardview.widget.CardView>