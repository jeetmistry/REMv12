<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/student_home_profile_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:text="Submit Your Profile First......!"
        android:textSize="30dp"/>

    <ImageView
        android:src="@drawable/student"
        android:layout_width="140dp"
        android:layout_marginTop="0dp"
        android:layout_height="140dp"

        android:layout_gravity="center"
        android:id="@+id/student_home_profile_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PERSONAL DETAILS"
        android:id="@+id/student_home_profile_personal"
        android:visibility="gone"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="EMAIL ID"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_email"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PHONE NO"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_phoneno"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CITY"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_city"/>
    <TextView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:hint="QUALIFICATION DETAILS"
        android:id="@+id/student_home_profile_qualification"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="QUALIFICATION"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_qualification"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="COLLEGE NAME"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_clgname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="PASSING YEAR"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_passingyear"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIELD OF INTEREST"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:id="@+id/student_home_info_INTEREST"/>
